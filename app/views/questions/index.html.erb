<div class="flex items-center justify-between mb-4">
  <h1 class="text-2xl font-bold">Preguntas</h1>
  <% if user_signed_in? %>
    <%= link_to "Nueva pregunta", new_question_path, class: "px-4 py-2 rounded bg-blue-600 text-white" %>
  <% end %>
</div>

<div class="space-y-3">
  <% @questions.each do |q| %>
    <div class="bg-white border rounded p-4">
      <div class="flex items-center justify-between">
        <%= link_to q.title, q, class: "font-semibold text-lg hover:underline" %>
        <span class="text-sm text-gray-500">por <%= q.user.email %></span>
      </div>
      <p class="mt-2 text-gray-700 line-clamp-3"><%= truncate(q.body, length: 200) %></p>
      <div class="mt-3 text-sm text-gray-600 flex items-center gap-4">
        <span><strong><%= q.answers.size %></strong> respuestas</span>
        <span><strong><%= q.likes.size %></strong> me gusta</span>
      </div>
    </div>
  <% end %>
</div>

