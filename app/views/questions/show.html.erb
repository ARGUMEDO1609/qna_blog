<div class="bg-white border rounded p-4">
  <div class="flex items-start justify-between gap-4">
    <h1 class="text-2xl font-bold"><%= @question.title %></h1>
    <span class="text-sm text-gray-500">por <%= @question.user.email %></span>
  </div>

  <p class="mt-3 text-gray-800 whitespace-pre-line"><%= @question.body %></p>

  <div class="mt-4 flex items-center gap-3">
    <% if user_signed_in? %>
      <% if @question.liked_by?(current_user) %>
        <%= button_to "Quitar Me gusta (#{@question.likes.size})", question_unlike_path(@question),
            method: :delete, class: "px-3 py-1 rounded border" %>
      <% else %>
        <%= button_to "Me gusta (#{@question.likes.size})", question_like_path(@question),
            method: :post, class: "px-3 py-1 rounded bg-pink-600 text-white" %>
      <% end %>

      <% if @question.user == current_user %>
        <%= link_to "Editar", edit_question_path(@question), class: "px-3 py-1 rounded border" %>
        <%= button_to "Eliminar", @question, method: :delete,
              data: { confirm: "¿Eliminar la pregunta?" },
              class: "px-3 py-1 rounded border text-red-700" %>
      <% end %>
    <% else %>
      <p class="text-sm text-gray-600">Inicia sesión para dar Me gusta o responder.</p>
    <% end %>
  </div>
</div>

<div class="mt-6">
  <h2 class="text-xl font-semibold mb-3">Respuestas (<%= @answers.size %>)</h2>

  <div class="space-y-3">
    <% @answers.each do |a| %>
      <div class="bg-white border rounded p-4">
        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-500">por <%= a.user.email %></span>
          <div class="flex items-center gap-2">
            <% if user_signed_in? %>
              <% if a.liked_by?(current_user) %>
                <%= button_to "Quitar Me gusta (#{a.likes.size})", unlike_answer_path(a),
                      method: :delete, class: "px-2 py-1 rounded border text-sm" %>
              <% else %>
                <%= button_to "Me gusta (#{a.likes.size})", like_answer_path(a),
                      method: :post, class: "px-2 py-1 rounded bg-pink-600 text-white text-sm" %>
              <% end %>

              <% if a.user == current_user %>
                <%= link_to "Editar", edit_answer_path(a), class: "px-2 py-1 rounded border text-sm" %>
                <%= button_to "Eliminar", a, method: :delete, data: { confirm: "¿Eliminar respuesta?" },
                      class: "px-2 py-1 rounded border text-sm text-red-700" %>
              <% end %>
            <% end %>
          </div>
        </div>
        <p class="mt-2 whitespace-pre-line"><%= a.body %></p>
      </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
  <div class="mt-6 bg-white border rounded p-4">
    <h3 class="font-semibold mb-2">Añadir una respuesta</h3>
    <%= form_with model: [@question, @answer], class: "space-y-3" do |f| %>
      <div>
        <%= f.label :body, "Tu respuesta", class: "block text-sm font-medium" %>
        <%= f.text_area :body, rows: 5, class: "mt-1 w-full border rounded p-2" %>
        <% @answer.errors.full_messages_for(:body).each do |msg| %>
          <p class="text-red-600 text-sm"><%= msg %></p>
        <% end %>
      </div>
      <%= f.submit "Publicar", class: "px-4 py-2 rounded bg-blue-600 text-white" %>
    <% end %>
  </div>
<% end %>
