<h1 class="text-2xl font-bold mb-4">Editar respuesta</h1>
<%= form_with model: @answer, class: "space-y-3" do |f| %>
  <div>
    <%= f.label :body, "Contenido", class: "block text-sm font-medium" %>
    <%= f.text_area :body, rows: 6, class: "mt-1 w-full border rounded p-2" %>
    <% @answer.errors.full_messages_for(:body).each do |msg| %>
      <p class="text-red-600 text-sm"><%= msg %></p>
    <% end %>
  </div>
  <div class="flex gap-2">
    <%= f.submit "Guardar", class: "px-4 py-2 rounded bg-blue-600 text-white" %>
    <%= link_to "Cancelar", @answer.question, class: "px-4 py-2 rounded border" %>
  </div>
<% end %>
