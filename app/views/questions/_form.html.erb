<%= form_with model: @question, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :title, "TÃ­tulo", class: "block text-sm font-medium" %>
    <%= f.text_field :title, class: "input" %>
    <% @question.errors.full_messages_for(:title).each do |msg| %>
      <p class="text-red-600 text-sm"><%= msg %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :body, "Contenido", class: "block text-sm font-medium" %>
    <%= f.text_area :body, rows: 10, class: "textarea" %>
    <% @question.errors.full_messages_for(:body).each do |msg| %>
      <p class="text-red-600 text-sm"><%= msg %></p>
    <% end %>
  </div>

  <div class="flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancelar", (@question.persisted? ? @question : questions_path), class: "btn btn-outline" %>
  </div>
<% end %>
